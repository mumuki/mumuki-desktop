Vagrant.configure(2) do |config|
  config.vm.box = "mumuki"
  config.vm.box_check_update = false
  config.vm.network "forwarded_port", guest: 3000, host: 3000

  config.vm.provision "shell",
    name: "Start server",
    inline: 'cd /home/vagrant && ./stop.sh && ./run.rb',
    privileged: false
end
